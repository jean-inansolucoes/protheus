Static Function AjustaSX1()
*-----------------------------------------------------------------------------*
Local aRegs  	:= {}  
Local i,j
aAdd(aRegs,{cPerg,"01","Item             ?","Item             ?","Item             ?","mv_ch1" ,"C",02					  ,0,0,"G","			","mv_par01",           "",             "",             "","","",       "",       "",       "","","",     "",     "",     "","","","","","","","","","","","",	 "" ,"","","",				 ""})
aAdd(aRegs,{cPerg,"02","% Limite         ?","% Limite         ?","% Limite         ?","mv_ch2" ,"N",06					  ,2,0,"G","naovazio	","mv_par02",           "",             "",             "","","",       "",       "",       "","","",     "",     "",     "","","","","","","","","","","","",	 "" ,"","","",				 ""})

dbSelectArea("SX1")
dbSetOrder(1)
For i := 1 To Len(aRegs)
	If !dbSeek(cPerg + aRegs[i,2])
		RecLock("SX1", .T.)
		For j := 1 to FCount()
			If j <= Len(aRegs[i])
				FieldPut(j, aRegs[i,j])	 
			Endif
		Next
		MsUnlock()
	Endif
Next  


Return()
