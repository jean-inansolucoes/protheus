*/
Static Function MSGETBYTE(hPort, nTempo)

Local cByte		:= ""
Local nTimeout	:= 0

//ฺฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤ
//ณValida เ porta de comunica็ใo que esta ativaณ
//ภฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤ
If PORT_OLD <> hPort
	MSSetPort(hPort)
	PORT_OLD = hPort
End If

//ฺฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤ
//ณSeta regras de tempo para leitura da portaณ
//ภฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤฤ
nTimeout := MSGetInpTO()
If MSSetInpTO(nTempo * 1000) < 0
	msgStop("MSGetByte: Error in MSSetTimeOut")
	cByte := " "
Else
	cByte := " "
	If MSReadByte(@cByte) < 1
		cByte := ""
	Else
		cByte := substr(cByte,1,1)
	EndIf
	MSSetInpTO(nTimeout)
EndIf

Return (cByte)





